<script>
    var closePopover;
    var keyArr = [];
    const matchArr = [38, 38, 40, 40, 37, 39, 37, 39, 66, 65];
    start("<% if(ishttps){ %>wss://<% }else{ %>ws://<% } %><%= domain %>/");

    function fallbackCopyTextToClipboard(text) {
        var textArea = document.createElement("textarea");
        textArea.value = text;
        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();

        try {
            var successful = document.execCommand('copy');
            var msg = successful ? 'successful' : 'unsuccessful';
            console.log('Fallback: Copying text command was ' + msg);
        } catch (err) {
            console.error('Fallback: Oops, unable to copy', err);
        }

        document.body.removeChild(textArea);
    }

    function copyTextToClipboard(text) {
        if (!navigator.clipboard) {
            fallbackCopyTextToClipboard(text);
            return;
        }
        navigator.clipboard.writeText(text).then(function () {
            console.log('Async: Copying to clipboard was successful!');
        }, function (err) {
            console.error('Async: Could not copy text: ', err);
        });
    }

    function copy(ele) {
        clearTimeout(closePopover);
        $('#popover').popover('show');
        closePopover = setTimeout(function () {
            $('#popover').popover('hide');
        }, 2000)
        copyTextToClipboard($(ele).val());
    }

    $("#link-input").keydown(function (e) {
        if (e.which == 13) {
            ws.send($("#link-input").val().trim())
        }
    })

    function sendLink() {
        ws.send($("#link-input").val().trim())
    }

    function displayErr(err) {
        $('#errorMsg').html(err)
        $('#alertDiv').show()
    }

    function closeAlert() {
        $('#alertDiv').hide()
    }

    function start(websocketServerLocation) {
        ws = new WebSocket(websocketServerLocation);
        ws.onopen = function () {
            console.log("ws connection established")
        };
        ws.onmessage = function (e) {
            if (e.data.startsWith('err://')) {
                console.log(e.data)
                var errcode = e.data.split('err://')[1].split(':')[0];
                handleErr(errcode)
            }
            closeAlert();
            $('#rLink').val(e.data);
            $('#linkModal').modal()
        };
        ws.onclose = function () {
            console.log("ws connection has been closed");
            setTimeout(function () {
                start(websocketServerLocation)
            }, 3000);
        };
    }

    $('#source-code').keydown(function (e) {
        keyArr.push(e.which);
        if (keyArr.length > matchArr.length) {
            keyArr.shift();
        }
        if (arraysEqual(keyArr, matchArr)) {
            location.href = "<% if(ishttps){ %>https://<% }else{ %>http://<% } %><%= domain %>/admin/";
        }
    })

    function arraysEqual(arr1, arr2) {
        if (arr1.length !== arr2.length)
            return false;
        for (var i = arr1.length; i--;) {
            if (arr1[i] !== arr2[i])
                return false;
        }
        return true;
    }
    
    <% include ../partials/handleErrJS.ejs %>
</script>