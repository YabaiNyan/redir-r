<script>
    var closePopover;
    var keyArr = [];
    var ws;
    start("<% if(ishttps){ %>wss://<% }else{ %>ws://<% } %><%= domain %>/admin/register/");

    $("#loginForm").submit(function(e){
        e.preventDefault()
        e.stopPropagation()
        formSubmit()
    })

    function formSubmit(){
        var username = $("#username-field").val().trim()
        var password = $("#password-field").val()
        if(username == "" || password == ""){
            var loginErrs = []
            var plural = ''
            var isAre = 'is'
            if(username == ""){loginErrs.push("username")}
            if(password == ""){loginErrs.push("password")}
            if(loginErrs.length > 1){
                plural = 's'
                isAre = 'are'
            }
            displayErr("The " + loginErrs.join(" and ") + " field" + plural + " " + isAre + " empty")
            return
        }
        var loginObj = {username, password}
        ws.send(JSON.stringify(loginObj))
        username = '';
        password = '';
        loginObj = '';
    }

    function sendLink() {
        ws.send($("#link-input").val().trim())
    }

    function displayErr(err) {
        $('#errorMsg').html(err)
        $('#alertDiv').show()
    }

    function closeAlert() {
        $('#alertDiv').hide()
    }

    function start(websocketServerLocation) {
        ws = new WebSocket(websocketServerLocation);
        ws.onopen = function () {
            console.log("ws connection established")
        };
        ws.onmessage = function (e) {
            if (e.data.startsWith('err://')) {
                console.log(e.data)
                var errcode = e.data.split('err://')[1].split(':')[0];
                handleErr(errcode)
            }else{
                location.href = '/admin/'
            }
        };
        ws.onclose = function () {
            console.log("ws connection has been closed");
            setTimeout(function () {
                start(websocketServerLocation)
            }, 3000);
        };
    }
    
    <% include ../partials/handleErrJS.ejs %>
</script>